{
  "name": "@orama/core",
  "version": "1.2.15",
  "exports": "./src/index.ts",
  "nodeModulesDir": "auto",
  "tasks": {
    "build": "deno run -A ./dnt.ts",
    "test": "deno test tests --allow-env --allow-read --allow-net"
  },
  "fmt": {
    "lineWidth": 140,
    "semiColons": false,
    "singleQuote": true,
    "include": [
      "./src/**/*.ts",
      "./tests/**/*.ts"
    ]
  },
  "compilerOptions": {
    "lib": [
      "deno.window",
      "dom"
    ]
  },
  "lint": {
    "include": [
      "src/"
    ],
    "rules": {
      "exclude": [
        "no-import-prefix",
        "no-explicit-any",
        "no-process-global"
      ]
    }
  }
}